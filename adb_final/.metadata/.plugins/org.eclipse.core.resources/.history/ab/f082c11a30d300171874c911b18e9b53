/**
 * 
 * @author scottfloam and pratikkarnik
 *
 */
public class Site {
	private int id;
	private LockTable lt;
	
	public Site(int id) {
		this.id = id;
		this.lt = new LockTable(id);

		for (int i = 1; i < 21; i++) {
			if (i % 2 == 0) {
				(this.lt).put(i, new Variable(i));
			} else if ((1 + (i % 10)) == this.id) {
				(this.lt).put(i, new Variable(i));
			}
		}

	}

	public String toString() {
		return "Site_" + id;
	}

	
	public void fail() {
		this.lt = null;
	}

	public LockTable getLT() {
		return this.lt;
	}

	public int getID() {
		return this.id;
	}

}